<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.hackforhumans.refugeetimeline.activity.TaskDetailsActivity"
    android:id="@+id/taskdetails_root">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/taskdetails_appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/taskdetails_toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/taskdetails_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="&lt; Name >"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="&lt; Description Text >"
        android:id="@+id/taskdetails_description" />
</LinearLayout>
